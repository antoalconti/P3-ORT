                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FchNac, "Fecha nacimiento", htmlAttributes: new { @class = "control-label col-md-2" })
