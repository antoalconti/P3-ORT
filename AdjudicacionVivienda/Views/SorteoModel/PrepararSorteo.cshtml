@model AdjudicacionVivienda.Models.SorteoModel

@{
    ViewBag.Title = "Preparar sorteo";
}

<h2>Preparar sorteo</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>@ViewBag.MensajeGuardado</p>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Fecha, "Fecha")
                @Html.EditorFor(model => model.Fecha)
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.IdBarrio)
                @Html.DropDownListFor(m => m.IdBarrio, Model.ListaBarrios)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>@ViewBag.Mensaje</p>
                <p>
                    @Html.LabelFor(m => m.IdViviendaSeleccionado)
                    @Html.DropDownListFor(m => m.IdViviendaSeleccionado, Model.ListaViendas)
                </p>
            </div>
        </div>
        <input type="text" id="cargoSorteo" name="cargoSorteo" hidden="hidden"/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit"  id="cargar" value="Crear Sorteo" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@section Scripts {
    <script type="text/javascript">
        $('#IdBarrio').on("change", function () {
            $("#cargoSorteo").val(false)
            $("form").submit();

        });

        $('#cargar').on("click", function () {

            $("#cargoSorteo").val(true)
            $("form").submit();

        });

        
    </script>
}

